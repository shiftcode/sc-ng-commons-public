{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "libs",
  "projects": {
    "core": {
      "root": "libs/core",
      "sourceRoot": "libs/core/src",
      "projectType": "library",
      "prefix": "sc",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "libs/core/tsconfig.lib.json",
            "project": "libs/core/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "libs/core/tsconfig.lib.prod.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder":"@angular-devkit/build-angular:jest",
          "options": {
            "tsConfig": "tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    },
    "components": {
      "root": "libs/components",
      "sourceRoot": "libs/components/src",
      "projectType": "library",
      "prefix": "sc",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "libs/components/ng-package.json",
            "tsConfig": "libs/components/tsconfig.lib.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "libs/components/tsconfig.lib.prod.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:jest",
          "options": {
            "tsConfig": "tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    },
    "styleguide": {
      "root": "apps/styleguide",
      "sourceRoot": "apps/styleguide/src",
      "projectType": "application",
      "prefix": "sg",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": {
              "base": "apps/styleguide/dist"
            },
            "index": "apps/styleguide/src/index.html",
            "tsConfig": "apps/styleguide/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "polyfills": [
              "zone.js"
            ],
            "assets": [
              "apps/styleguide/src/favicon.ico",
              "apps/styleguide/src/assets"
            ],
            "styles": [
              "apps/styleguide/src/styles.scss"
            ],
            "scripts": [],
            "browser": "apps/styleguide/src/main.ts"
          },
          "configurations": {
            "production": {
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "styleguide:build:production"
            },
            "development": {
              "buildTarget": "styleguide:build:development"
            }
          },
          "defaultConfiguration": "development"
        }
      },
      "schematics": {
        "@schematics/angular:component": {
          "prefix": "sg",
          "viewEncapsulation": "Emulated"
        },
        "@schematics/angular:directive": {
          "prefix": "sg"
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "packageManager": "npm"
  },
  "schematics": {
    "@schematics/angular:application": {
      "strict": true
    },
    "@schematics/angular:component": {
      "prefix": "sc",
      "style": "scss",
      "displayBlock": true,
      "changeDetection": "OnPush",
      "viewEncapsulation": "None",
      "skipTests": true
    },
    "@schematics/angular:directive": {
      "prefix": "sc",
      "skipTests": true
    },
    "@schematics/angular:pipe": {
      "skipTests": true
    },
    "@schematics/angular:service": {
      "skipTests": true
    }
  }
}
